 - <a href="/questions/{{ question }}"><span class="dfiqIdTag">{{ question }}</span> &nbsp;{{ components[question].name }}</a>
{%       else %}
 - <span class="dfiqIdTag">{{ question }}</span> &nbsp;{{ components[question].name }}
{%       endif %}
{%     endif %}
{%   endfor %}
{%   endif %}
{% endfor %}
{% endif %}
